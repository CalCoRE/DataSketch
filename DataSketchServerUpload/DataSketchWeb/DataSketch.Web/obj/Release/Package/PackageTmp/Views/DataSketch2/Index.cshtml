@{
    ViewBag.Title = "DataSketch";
    Layout = "~/Views/Shared/BasicLayout.cshtml";
    ViewBag.IsLogin = (HttpContext.Current.Session != null && HttpContext.Current.Session["UserId"] != null && Convert.ToInt64(HttpContext.Current.Session["UserId"]) > 0);
}
<style>
    .resp-container {
        position: relative;
        height: 0;
        overflow: hidden;
        padding-top: 47%;
    }

    .resp-iframe {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        border: 0;
    }
</style>

<div class="resp-container">
    <iframe class="resp-iframe" src="~/DataSketchApp2/index.html?id=@ViewBag.UserId&sketchName=@ViewBag.SketchName&mode=@ViewBag.Mode" allowfullscreen></iframe>
</div>
@if (ViewBag.IsLogin)
{
    <div id="small-chat">
        <a class="open-small-chat">
            <i class="fa fa-arrows-alt"></i>
        </a>
    </div>
}

<script>
    //only for datasketch page
    $('#page-wrapper').addClass('padding0');

    function getCurrentUserId() {
        return @HttpContext.Current.Session["UserId"];
    }
</script>
