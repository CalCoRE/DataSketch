@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/font-awesome/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/blockUI")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/plugins/validate")
    @RenderSection("scripts", required: false)
    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-120657113-1"></script>
    <script>
        window.dataLayer = window.dataLayer || [];
        function gtag() { dataLayer.push(arguments); }
        gtag('js', new Date());

        gtag('config', 'UA-120657113-1');
        $(document).ready(function () {
        });
    </script>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <script>
        function showLoader() {
            debugger
            blockUI()
        }
        function blockUI() {
            $('div.showLoader').block({
                message: $('#loader'),
                css: {
                    border: 'none',
                    backgroundColor: 'transparent'
                }, overlayCSS: { backgroundColor: '#FFF', position: 'fixed' }
            })
        }
        function unBlockUI() {
            $('div.showLoader').unblock();
        }
    </script>

</head>
<body class="gray-bg">
    <div class="container body-content">
        @RenderBody()
    </div>

</body>
</html>