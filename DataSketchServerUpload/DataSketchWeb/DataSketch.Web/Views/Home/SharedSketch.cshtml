@model IEnumerable<DataSketch.Models.SketchMasterModel>

@{
    ViewBag.Title = "Shared Sketches";
    Layout = "~/Views/Shared/BasicLayout.cshtml";
}
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-content">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover sharedsketch-list" id="sharedSketchTable">
                            <thead>
                                <tr>
                                    <th >Sketch Name</th>
                                    <th >Shared by</th>
                                    <th class="text-center">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null)
                                {
                                    foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.SketchName</td>
                                            <td>@item.FirstName</td>
                                            <td class="text-center">                                                
                                                <button class="btn-white btn btn-xs" onclick="location.href='@Url.Action("Index", "DataSketch")?userId=@item.UserId&sketchName=@item.SketchName&mode=view'">View</button>
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
        $(function () {
            InitDataTable('sharedSketchTable');
        });
</script>